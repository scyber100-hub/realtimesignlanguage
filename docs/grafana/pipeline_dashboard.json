{
  "schemaVersion": 39,
  "title": "Realtime Sign Pipeline",
  "refresh": "5s",
  "panels": [
    {
      "type": "stat",
      "title": "Timeline rate (1m)",
      "gridPos": {"x": 0, "y": 0, "w": 8, "h": 4},
      "targets": [
        {"expr": "sum(rate(timeline_broadcast_total[1m]))", "legendFormat": "timeline/s"}
      ]
    },
    {
      "type": "stat",
      "title": "Replace ratio (5m)",
      "gridPos": {"x": 8, "y": 0, "w": 8, "h": 4},
      "targets": [
        {"expr": "sum(rate(timeline_broadcast_total[5m]))", "legendFormat": "timeline/s"},
        {"expr": "sum(rate(ingest_messages_total{type=\"partial\"}[5m]))", "hide": true},
        {"expr": "sum(rate(ingest_messages_total{type=\"final\"}[5m]))", "hide": true}
      ]
    },
    {
      "type": "timeSeries",
      "title": "Latency p90 (ms)",
      "gridPos": {"x": 0, "y": 4, "w": 12, "h": 8},
      "targets": [
        {"expr": "histogram_quantile(0.9, sum(rate(ingest_to_broadcast_ms_bucket[5m])) by (le))", "legendFormat": "p90"}
      ]
    },
    {
      "type": "timeSeries",
      "title": "Rate-limit ratio (5m)",
      "gridPos": {"x": 12, "y": 4, "w": 12, "h": 8},
      "targets": [
        {"expr": "rate(ingest_rate_limited_total[5m]) / clamp_min(rate(ingest_messages_total{type=~\"partial|final\"}[5m]), 1e-9)", "legendFormat": "rl ratio"}
      ]
    }
  ]
}

